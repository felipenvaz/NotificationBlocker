<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:padding="15dp">



    <EditText
        android:id="@+id/filter_item_filter"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="15dp"
        android:hint="Filtrar por"
        />
    <RelativeLayout
        android:id="@+id/filter_item_at_layout"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/filter_item_filter"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/filter_item_filter_at"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="Em"
        android:textSize="15dp" />
    <Spinner
        android:id="@+id/filter_item_spinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/filter_item_filter_at"
        ></Spinner>
    </RelativeLayout>
    <Button
        android:id="@+id/filter_item_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/filter_item_at_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/add"/>

</RelativeLayout>